% % THIS CODE DISPLAYS FOLLOWING IMAGE
%    * 
%   *** 
%  ***** 
% *******
% Triangle

leng = input('Enter a number: '); % Prompt the user for a number
% Loop over each row of the pattern
for i = 1:leng
    % Calculate the number of spaces and asterisks to print for this row
    num_spaces = height - i;
    num_asterisks = 2*i - 1;
    
    % Print out the spaces and asterisks for this row
    for j = 1:num_spaces
        fprintf(' ');
    end
    for j = 1:num_asterisks
        fprintf('*');
    end
    
    % Move to the next line for the next row
    fprintf('\n');
end
